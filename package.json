{
  "name": "teambition-node-sdk",
  "version": "0.2.61",
  "description": "teambition-node-sdk",
  "main": "lib/main/index.js",
  "typings": "lib/main/index.d.ts",
  "module": "lib/module/index.js",
  "repository": {
    "type": "git",
    "url": "http://gitlab.alibaba-inc.com/tbs/teambition-node-sdk"
  },
  "scripts": {
    "dev": "DEBUG=sdk:* NODE_ENV=development nodemon",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "tslint -c tslint.json -p tsconfig.json --fix",
    "test": "NODE_ENV=test mocha --exit --require espower-typescript/guess ./test/**/*.test.ts",
    "test:cov": "nyc npm test && open ./coverage/src/index.html",
    "test:watch": "DEBUG=sdk:* npm run test -- --watch-extensions ts --watch -R min",
    "clean": "trash lib",
    "debug": "ndb nodemon",
    "release": "standard-version --release-as patch && npm run build && git push --follow-tags origin master && tnpm publish"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/jsonwebtoken": "^8.3.2",
    "@types/jwt-decode": "^2.2.1",
    "@types/request": "^2.48.2",
    "debug": "^4.1.1",
    "egg": "^2.22.2",
    "jwt-decode": "^2.2.0",
    "tws-auth": "^3.2.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@types/debug": "^4.1.4",
    "@types/express": "^4.17.0",
    "@types/koa": "^2.0.48",
    "@types/koa-router": "^7.0.40",
    "@types/mocha": "^5.2.7",
    "@types/supertest": "^2.0.7",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "espower-typescript": "^9.0.2",
    "express": "^4.17.1",
    "husky": "^2.4.1",
    "koa": "^2.7.0",
    "koa-router": "^7.4.0",
    "mocha": "^6.1.4",
    "ndb": "^1.0.45",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "power-assert": "^1.6.1",
    "standard-version": "^8.0.1",
    "supertest": "^4.0.2",
    "trash-cli": "^3.0.0",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "espower-typescript/guess"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npm.alibaba-inc.com"
  },
  "files": [
    "lib",
    "README.md",
    "CHANGELOG.md"
  ]
}
